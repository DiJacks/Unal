<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <TableLayout
        android:id="@+id/play_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TableRow android:gravity="center_horizontal">
            <Button android:id="@+id/one"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_1"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
            <Button android:id="@+id/two"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_2"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
            <Button android:id="@+id/three"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_3"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
        </TableRow>
        <TableRow android:gravity="center_horizontal">
            <Button android:id="@+id/four"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_4"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
            <Button android:id="@+id/five"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_5"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
            <Button android:id="@+id/six"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_6"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
        </TableRow>
        <TableRow android:gravity="center_horizontal">
            <Button android:id="@+id/seven"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_7"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
            <Button android:id="@+id/eight"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_8"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
            <Button android:id="@+id/nine"   android:layout_height="100dp" android:layout_width="100dp"
                android:text="@string/_9"    android:textSize="70sp"
                tools:ignore="ButtonStyle" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/information"           android:layout_width="fill_parent"
        android:layout_height="wrap_content"    android:text="@string/info"
        android:gravity="center_horizontal"     android:layout_marginTop="20dp"
        android:textSize="20sp"
    />
</LinearLayout>


